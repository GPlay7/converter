<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:weightSum="9"
    android:background="@drawable/backgroundss"
    tools:context="com.best.toukir.currencycinverter.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="55dp"
            android:text="Currency"
            android:id="@+id/txtAppamee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="35dp"
            android:text="Converter"
            android:id="@+id/txtAppame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
        android:textColor="@color/colorPrimaryDark"
        android:onClick="btnConverter"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Convert Currency"
        android:id="@+id/btnConvert"
        android:layout_margin="22dp"
        android:layout_centerVertical="true" android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:onClick="btnClick"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Int. Currency Codes"
        android:id="@+id/button2"
        android:layout_centerVertical="true" android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true" />





    </LinearLayout>

    <LinearLayout
        android:layout_weight="4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>


    </LinearLayout>

</LinearLayout>
